extends ../layouts/default.jade
block content
  link(rel='stylesheet', type='text/css', href='components/details-css/productviewgallery.css', media='all')
  link(rel='stylesheet', type='text/css', href='css/details.css', media='all')

  .main_bg
    .wrap
      .main
        // start content
        .single
          // start span1_of_1
          .left_content
            .span1_of_1
              // start product_slider
              .product-view
                .product-essential
                  .product-img-box
                    .more-views-container
                        .product-image
                          img#zoom_01( src='#{data[0].basicInfo.imgUrl}', data-zoom-image='#{data[0].basicInfo.imgUrl}')
                        ul
                          #gal1
                            for image in data[0].basicInfo.listimgUrl
                              li
                                a(href='#', data-image='#{image}', data-zoom-image='#{image}')
                                  img.listimg#zoom_01(src='#{image}' style="width:64px;height:85px; margin-left:10px;")
            .span1_of_1_des
                h3 #{data[0].basicInfo.name}
                h5 #{data[0].basicInfo.price} VND
                .available
                  h4 Available Options :
                  ul
                    li
                      | Color:
                      select(ng-model='cart.color', required='')
                        for color in data[0].color
                          option(disabled='', selected='', value='#{color}') #{color}
                    li
                      | Size:
                      select(ng-model='cart.size', required='')
                        for size in data[0].size
                          option(disabled='', selected='', value='#{size}') #{size}

                    li
                      | Quantity:
                      input(style='height: 28px;', placeholder='Enter quantity', type='number', min='1', ng-model='cart.number', required='')
                  .btn_form(style='width:100%;')
                    input(type='button', value='add to cart', title='', style='width:100%;')
                  .clear
            .clear
            .section
              ul.tabs
                li.current OVERVIEW
                li PRODUCT REVIEWS
                .clear
              .box.visible
                p.para.top #{data[0].basicInfo.description}
              .box
                .comments-container
                  h1(ng-hide='product.reviews.length', style='text-align: center;') Nothing here yet. Be the first to reivew.
                  ul#comments-list.comments-list
                    #review
                      if reviewpro[0] != null
                        for review in reviewpro[0].comment
                          li(ng-repeat='review in product.reviews')
                            .comment-main-level
                              .comment-avatar
                                img(src='#{review.avatar}', alt='Avatar')
                              .comment-box
                                .comment-head
                                  h6.comment-name #{review.name}
                                  i.fa.fa-reply
                                  i.fa.fa-heart
                                .comment-content
                                  p
                                    | Rating:
                                    span(style='color:#e4bb24;') #{review.rating}
                                  p #{review.content}
                    li(ng-show='review.$value === null')
                      .comment-main-level
                        .comment-avatar
                          img(src='images/pic1.jpg', alt='Avatar')
                        .comment-box
                          .comment-head
                            h6.comment-name Ten ngươi đang nhap dinh viet
                            i.fa.fa-reply
                            i.fa.fa-heart
                          .comment-content
                              p
                                | Rating:
                                span() 1
                                  input(type='radio', name='rating', ng-model='review.rating', value='1', required='')
                                span() 2
                                  input(type='radio', name='rating', ng-model='review.rating', value='2', required='')
                                span() 3
                                  input(type='radio', name='rating', ng-model='review.rating', value='3', required='')
                                span() 4
                                  input(type='radio', name='rating', ng-model='review.rating', value='4', required='')
                                span() 5
                                  input(type='radio', name='rating', ng-model='review.rating', value='5', required='')
                              textarea#message.form-control(rows='5', ng-model='review.content', required='')
                              button.btn.btn-primary(onclick="Addcomment('#{data[0].productID}','http://studymovie.net/Cms_Data/Sites/admin/Themes/Default/images/default-avatar.jpg','sang')" style='float:right;') Send
            // end tabs
          .clear
          //
          button(onclick="something(#{data[0].basicInfo.description})") ádasđ
          script.
            var something = function(data) {
            console.log('a')
            }

  script(type='text/javascript', src='components/jquery/jquery.min.js')
  script(type='text/javascript', src='components/detail-js/jquery.elevatezoom.js')
  script(type='text/javascript', src='js/details.js')
    // start top_js_button
  script(type='text/javascript', src='components/detail-js/move-top.js')
  script(type='text/javascript', src='components/detail-js/easing.js')
  script(type='text/javascript', src='components/rating-box/bootstrap-rating-input.js')
