extends ../layouts/default.jade
block content
  link(rel='stylesheet', type='text/css', href='components/details-css/productviewgallery.css', media='all')
  link(rel='stylesheet', type='text/css', href='css/details.css', media='all')
  .main_bg
    .wrap
      .main
        // start content
        .single
          // start span1_of_1
          .left_content
            .span1_of_1
              // start product_slider
              .product-view
                .product-essential
                  .product-img-box
                    .more-views-container

                        .product-image
                          img#zoom_01(src='images/small/image1.png', data-zoom-image='images/large/image1.jpg')
                        ul
                          #gal1
                            li
                              a(href='#', data-image='images/small/image1.png', data-zoom-image='images/large/image1.jpg')
                                img#zoom_01(src='images/thumb/image1.jpg')
                            li
                              a(href='#', data-image='images/small/image2.png', data-zoom-image='images/large/image2.jpg')
                                img#zoom_01(src='images/thumb/image2.jpg')
                            li
                              a(href='#', data-image='images/small/image3.png', data-zoom-image='images/large/image3.jpg')
                                img#zoom_01(src='images/thumb/image3.jpg')
                            li
                              a(href='#', data-image='images/small/image4.png', data-zoom-image='images/large/image4.jpg')
                                img#zoom_01(src='images/thumb/image4.jpg')
            .span1_of_1_des
              form.desc1(ng-submit='addToCart()')
                h3 Ten san pham
                h5 Gia san pham VND
                .available
                  h4 Available Options :
                  ul
                    li
                      | Color:
                      select(ng-model='cart.color', required='')
                        option(disabled='', selected='', value='') Select
                        option(ng-repeat='item in product.color', value='Do') Do
                    li
                      | Size:
                      select(ng-model='cart.size', required='')
                        option(disabled='', selected='', value='') Select
                        option(ng-repeat='item in product.size', value='XL') XL
                    li
                      | Quantity:
                      input(style='height: 28px;', placeholder='Enter quantity', type='number', min='1', ng-model='cart.number', required='')
                  .btn_form(style='width:100%;')
                    input(type='submit', value='add to cart', title='', style='width:100%;')
                  .clear
            .clear
            .section
              ul.tabs
                li.current OVERVIEW
                li PRODUCT REVIEWS
                .clear
              .box.visible
                p.para.top Cho ghi phan mo ta san pham
              .box
                .comments-container
                  h1(ng-hide='product.reviews.length', style='text-align: center;') Nothing here yet. Be the first to reivew.
                  ul#comments-list.comments-list
                    li(ng-repeat='review in product.reviews')
                      .comment-main-level
                        .comment-avatar
                          img(src='images/pic1.jpg', alt='Avatar')
                        .comment-box
                          .comment-head
                            h6.comment-name ten nguoi de binh luan
                            i.fa.fa-reply
                            i.fa.fa-heart
                          .comment-content
                            p
                              | Rating:
                              span(style='color:#e4bb24;') Dinh de danh dau sao
                            p Binh luan duoc viet
                    li(ng-show='review.$value === null')
                      .comment-main-level
                        .comment-avatar
                          img(src='images/pic1.jpg', alt='Avatar')
                        .comment-box
                          .comment-head
                            h6.comment-name Ten ngươi đang nhap dinh viet
                            i.fa.fa-reply
                            i.fa.fa-heart
                          .comment-content
                            form(ng-submit='addReview()')
                              p
                                | Rating:
                                span(ng-repeat='number in [1, 2, 3, 4, 5]')
                                  input(type='radio', name='rating', ng-model='review.rating', ng-value='number', required='')
                                  |  Dinh cho danh gia sao
                              textarea.form-control(rows='5', ng-model='review.content', required='')
                              button.btn.btn-primary(type='submit', style='float:right;') Send
            // end tabs
          .clear
  script(type='text/javascript', src='components/jquery/jquery.min.js')
  script(type='text/javascript', src='components/detail-js/jquery.elevatezoom.js')
  script(type='text/javascript', src='js/details.js')
    // start top_js_button
  script(type='text/javascript', src='components/detail-js/move-top.js')
  script(type='text/javascript', src='components/detail-js/easing.js')
  script(type='text/javascript', src='components/rating-box/bootstrap-rating-input.js')
