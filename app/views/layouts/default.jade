    .footer_bg1()
      .wrap
        .footer
          button#toTop(ng-click='scrollToTop()', style='display: block;')
            span#toTopHover(style='opacity: 1;')
          // end scroll_top_btn
          .copy
            p.link
              | ©  All rights reserved | Designed by  
              a(href='http://teamdas.esy.es/default.html')  DAS
          .clear

